{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@feathers-playground/types": ["./packages/types/src"],
      "@feathers-playground/core": ["./packages/core/src"]
    }
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ],
  "references": [
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./apps/backend"
    },
    {
      "path": "./apps/frontend"
    }
  ]
}